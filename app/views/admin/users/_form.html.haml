= form_for [:admin, @user] do |f|
  = render "/shared/error_messages", :target => @user
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    =f.check_box :admin
    =f.label :admin
  %p
    = approve_button_submit_tag button
    = danger_button_link_to t("cancel"), admin_users_url
