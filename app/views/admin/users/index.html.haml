%h1 Users list
%table
  %tr
    %td E-mail
    %td Type
  - @users.each do |user| 
    %tr
      %td= user.email
      %td= user_type(user)
      %td= link_to "Edit", edit_admin_user_path(user) 
      %td= link_to "Destroy", [:admin, user], :confirm => "Are you sure?", :method => :delete

%p
  = link_to "New", new_admin_user_url
